{
  "name": "ocde-threat-map",
  "version": "1.0.0",
  "description": "Real-time threat visualization system for OCDE firewall logs",
  "main": "src/app.js",
  "bin": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "node --watch src/app.js",
    "build": "node scripts/build.js",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/ocde-threat-map-linux",
    "build:macos": "pkg . --targets node18-macos-x64 --output dist/ocde-threat-map-macos",
    "build:windows": "pkg . --targets node18-win-x64 --output dist/ocde-threat-map-win.exe",
    "build:all": "pkg . --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --out-path dist"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "node_modules/three/**/*",
      "node_modules/globe.gl/**/*"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.4",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "globe.gl": "^2.27.0",
    "helmet": "^8.1.0",
    "ip-range-check": "^0.2.0",
    "lru-cache": "^11.2.5",
    "maxmind": "^5.0.3",
    "multer": "^2.0.2",
    "nsyslog-parser-2": "^0.9.12",
    "reconnecting-websocket": "^4.4.0",
    "stats.js": "^0.17.0",
    "three": "^0.160.0",
    "ws": "^8.19.0"
  },
  "keywords": [
    "syslog",
    "threat",
    "visualization",
    "real-time",
    "firewall"
  ],
  "author": "",
  "license": "ISC"
}
